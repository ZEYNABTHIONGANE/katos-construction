rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Accès PUBLIC pour le catalogue mobile (Showcase)
    // Nécessaire pour voir les projets sans être connecté
    match /projects/{projectId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    match /projects/{document=**} {
      allow list: if true;
    }

    // 2. Accès PUBLIC pour les réglages du Showcase
    match /settings/showcase {
      allow read: if true;
      allow write: if request.auth != null;
    }
    

    // 3. Accès PUBLIC pour les matériaux (Villas detail)
    match /materials/{materialId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    match /materials/{document=**} {
      allow list: if true;
    }

    // 4. Accès PUBLIC pour les terrains (Nouveau module)
    match /terrains/{terrainId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    match /terrains/{document=**} {
      allow list: if true;
    }

    // 5. Accès AUTHENTIFIÉ pour le reste (Données privées)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow list: if true; // Pour la recherche au login
    }

    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }

    match /chantiers/{chantierId} {
      allow read, write: if request.auth != null;
      match /feedbacks/{feedbackId} {
        allow read, write: if request.auth != null;
      }
    }
    
    match /prospects/{prospectId} {
      allow create: if true; // Tout le monde peut envoyer un formulaire
      allow read, update, delete, list: if request.auth != null; // Seul le backoffice peut les voir
    }

    // Intérêts pour les terrains
    match /terrainInterests/{interestId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Règle par défaut pour les autres documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}